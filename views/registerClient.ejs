<!DOCTYPE html>

  <head>
    <meta charset="utf-8">
    <title>Register for Client</title>
      <% include ./partials/header %>
      <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
      <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
      <!-- <link rel="stylesheet" href="../static/stylesheets/style.css"> -->

      <link href="https://fonts.googleapis.com/css?family=Black+Han+Sans&display=swap&subset=korean" rel="stylesheet">
      <link rel="stylesheet" href="/static/stylesheets/auth.css">

  </head>

  <body>
    <% include ./partials/navbar %>
    <% include ./partials/modal %>

<center>
    <div class="modal-body">
      <div class="auth_content">
          <br>
          <br>
          <br>
          <h5><p>Create Client Account</p></h5>
          <br>

          <div class="loginform registerform">
              <form action="/auth/register_client" method="post" id="myform">
                <p>Company Name</p>
                <input class="form-control currentname" type="text" name="name" required>
                <p>Email</p>
                <input class="form-control currentemail" type="email" name="email" required>
                <p>Password</p>
                <input class="form-control currentpassword" type="password" name="password" placeholder="Default password must be 1234" value="1234" id="confirm_password" required>
                <!-- <font size="3" color="red">Default password must be "1234"</font> -->
                <p>Confirm Password</p>
                <input class="form-control" type="password" name="password2" id="confirm_password" placeholder="Default password must be 1234" value="1234" required>

                <input class="form-control btn btn-primary" type="submit" value="Register">
              </form>
            </div>
</body>

</html>
