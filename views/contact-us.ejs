<body>
  <div class="active">
  <!-- Navigation -->
  <!--feedback section-->
    <div class="contact-title ">
      <h1>Contact Us</h1>
      <h2>Contact us if you have any questions or inquiries.</h2>
    </div>
  <div class="contact-form">
    <form id="contact-form" method="post" action="/services/contact-us">
      <input name="name" type="text" class="form-control" placeholder="Your Name" required><br>
      <input name="email" type="email" class="form-control" placeholder="Your Email" required><br>
      <textarea name="message" class="form-control" placeholder="Your Message"
       textarea rows="7" style="font-size: 20px;" required></textarea><br>
      <input type="submit" class="form-control submit" style="font-size: 20px;"
       value="Send Message">
    </form>

  </div>
</div>

</body>

